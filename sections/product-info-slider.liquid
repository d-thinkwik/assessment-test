{{ 'product-info-slider.css' | asset_url | stylesheet_tag }}



<div class="container">
    <div class="product-header">
        <p class="tagline">{{ section.settings.sub_title }} Simple & Effective Ingredients</p>
        <h1 class="product-title">{{ section.settings.title }} Customized Protein Powder</h1>
    </div>
    <div class="swiper-container">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="product-slide">
                <div class="product-image">
                  <img src="{{ block.settings.image | img_url: '600x' }}" alt="{{ block.settings.title }}" width="600" height="400">
                </div>
                <div class="product-info">
                  <div class="blend-section">
                    <h2 class="section-title">{{ block.settings.title }}</h2>

                    <div class="blend-features">
                        {% for i in (1..3) %}
                            {% assign feature_title = 'feature_' | append: i %}
                        <div class="feature">
                          <div class="feature-icon">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"></path>
                              <path d="M15 12L10.5 15L10.5 9L15 12Z" fill="currentColor"></path>
                            </svg>
                          </div>
                          <span class="{{ i }}">{{ block.settings[feature_title] }}</span>
                        </div>
                        {% endfor %}
                      </div>
                  </div>
                
                  <div class="ingredients-section">
                    <h2 class="section-title">{{ block.settings.ingredients_title }} Active Ingredients</h2>
                    <div class="ingredients-grid">
                        {% for i in (1..3) %}
                            {% assign ingredient_title = 'ingredient_title_' | append: i %}
                            {% assign ingredient_desc = 'ingredient_desc_' | append: i %}
                      <div class="ingredient-card">
                        <div class="ingredient-icon">
                          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2"></path>
                            <path d="M15 12L10.5 15L10.5 9L15 12Z" fill="currentColor"></path>
                          </svg>
                        </div>
                        <h3 {{ block.settings[ingredient_title] }} class="ingredient-title {{ i }}">{{ block.settings[ingredient_title] }} Whey Protein Isolate</h3>
                        <p {{ block.settings[ingredient_desc] }} class="ingredient-desc {{ i }}">{{ block.settings[ingredient_desc] }} Low Calorie with Virtually No Fat or Lactose. Quickly Absorbed To Maximize Muscle Building &amp; Repair.</p>
                      </div>
                        {% endfor %}
                    </div>
                  </div>

                  <button class="customize-btn">{{ block.settings.customize_btn }}</button>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <!-- Navigation buttons -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>


          
 

<script src="{{ 'product-info-slider.js' | asset_url }}" defer></script>



